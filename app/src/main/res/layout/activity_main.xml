<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header_card"
            android:padding="24dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_voice_changer"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voice Changer Pro"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Professional AI-Powered Voice Transformation"
                android:textSize="16sp"
                android:textColor="@color/secondary_text"
                android:gravity="center"
                android:alpha="0.8" />

        </LinearLayout>

        <!-- Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/status_card"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="System Status"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/statusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_status_inactive"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status: Inactive"
                    android:textSize="18sp"
                    android:textColor="@color/status_inactive"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <!-- Performance Metrics -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/latencyTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latency: N/A"
                        android:textSize="14sp"
                        android:textColor="@color/metric_text"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ms"
                        android:textSize="12sp"
                        android:textColor="@color/metric_label"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/divider_color"
                    android:layout_marginHorizontal="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/successRateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Success: N/A"
                        android:textSize="14sp"
                        android:textColor="@color/metric_text"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textSize="12sp"
                        android:textColor="@color/metric_label"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Voice Configuration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/config_card"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voice Configuration"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_marginBottom="16dp" />

            <!-- Voice Model Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voice Model"
                android:textSize="16sp"
                android:textColor="@color/secondary_text"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/voiceModelSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Processing Mode -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Processing Mode"
                android:textSize="16sp"
                android:textColor="@color/secondary_text"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/processingModeSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- API Configuration -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="API Configuration"
                android:textSize="16sp"
                android:textColor="@color/secondary_text"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/apiKeyEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your API key"
                android:inputType="textPassword"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Control Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/control_card"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voice Control"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_marginBottom="20dp" />

            <!-- Main Control Button -->
            <Button
                android:id="@+id/startStopButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Start Voice Changer"
                android:background="@drawable/button_primary"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

            <!-- Secondary Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/settingsButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Settings"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/helpButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Help"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- AI Features Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ai_card"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI Features"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_ai_brain"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Real-time Voice Analysis"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:gravity="center_vertical" />

                <Switch
                    android:id="@+id/aiAnalysisSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_voice_clone"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Voice Cloning"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:gravity="center_vertical" />

                <Switch
                    android:id="@+id/voiceCloningSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_smart_processing"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Smart Processing"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:gravity="center_vertical" />

                <Switch
                    android:id="@+id/smartProcessingSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>